    <param name="max_ang" value="1.0"/>
    
    <remap from="/cmd_vel" to="/cmd_vel_row" />
  </node>
  
  <node pkg="field_robot_cam" type="mode_manager.py" name="cmd_vel_mux" output="screen">
      </node>

