<launch>
  <param name="use_sim_time" value="false"/>

 
  <!-- SLAM Gmapping -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <!-- Frames -->
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>

    <!-- Map publishing -->
    <param name="map_update_interval" value="2.0"/>   <!-- xuất /map đều hơn -->
    <param name="tf_tolerance" value="0.2"/>          <!-- đủ rộng để tránh warn -->

    <!-- Laser & scan -->
    <remap from="scan" to="/scan"/>
    <param name="maxUrange" value="5.0"/>             <!-- tầm đo hữu dụng (m) -->
    <!-- (tuỳ môi trường, có thể tăng 6–8 nếu phòng rộng và scan sạch) -->

    <!-- Matching / scan matcher -->
    <param name="sigma" value="0.05"/>
    <param name="kernelSize" value="1"/>
    <param name="lstep" value="0.05"/>
    <param name="astep" value="0.05"/>
    <param name="iterations" value="5"/>
    <param name="lsigma" value="0.075"/>
    <param name="ogain" value="3.0"/>
    <param name="lskip" value="0"/>
    <param name="minimumScore" value="100"/>
    <param name="particles" value="80"/>               <!-- số hạt hợp lý cho MCU yếu -->

    <!-- Odometry noise (phù hợp odom bánh + IMU yaw-rate) -->
    <param name="srr" value="0.1"/>
    <param name="srt" value="0.2"/>
    <param name="str" value="0.1"/>
    <param name="stt" value="0.2"/>

    <!-- Chỉ cập nhật map khi có chuyển động đủ lớn -->
    <param name="linearUpdate"  value="0.20"/>        <!-- mỗi 20 cm -->
    <param name="angularUpdate" value="0.10"/>        <!-- mỗi 0.1 rad -->
    <param name="temporalUpdate" value="3.0"/>        <!-- dự phòng theo thời gian (s) -->

    <!-- Kích thước khởi tạo & ô lưới -->
    <param name="xmin" value="-10.0"/>
    <param name="ymin" value="-10.0"/>
    <param name="xmax" value="10.0"/>
    <param name="ymax" value="10.0"/>
    <param name="delta" value="0.05"/>                <!-- 5 cm/cell -->
  </node>
</launch>


