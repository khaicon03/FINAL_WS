<launch>
  <node pkg="rosserial_python" type="serial_node.py" name="stm32_serial">
    <param name="port" value="/dev/ttyUSB1"/>
    <param name="baud" value="115200"/>
  </node>
  
  <param name="robot_description" command="$(find xacro)/xacro $(find field_robot_description)/urdf/field_robot.urdf.xacro"/>

  <!-- robot_state_publisher -->
  <node pkg="robot_state_publisher" type="robot_state_publisher"
        name="robot_state_publisher" output="screen">
    <param name="publish_frequency" value="50.0"/>
  </node>

  <node pkg="rplidar_ros" type="rplidarNode" name="rplidar" output="screen">
    <param name="serial_port" value="/dev/ttyUSB0"/>
    <param name="serial_baudrate" value="115200"/>
    <param name="frame_id" value="laser_link"/>
    <param name="inverted" value="false"/>
    <param name="angle_compensate" value="true"/>
  </node>

  <!-- Wheel encoder -> Odometry (python node) -->
  <node pkg="field_robot_missions" type="waypoint_follower.py" name="encoder_odom_node" output="screen">
    <param name="wheel_radius" value="0.0325"/>
    <param name="ticks_per_rev" value="1332"/>     <!-- 333 * 4 -->
    <param name="encoder_sign" value="1.0"/>
    <param name="yaw_sign" value="1.0"/>
    <param name="odom_frame" value="odom"/>
    <param name="base_frame" value="base_link"/>
    <param name="odom_topic" value="wheel_odom"/>
  </node>
  
  <!-- Navigation -->
  <node pkg="field_robot_nav" type="test.py" name="test" output="screen"> </node>
  

  <!-- AMCL driff -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <param name="use_map_topic" value="true"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="global_frame_id" value="map"/>
    <param name="laser_max_range" value="6.0"/>
    <param name="laser_min_range" value="0.05"/>
    <param name="laser_max_beams" value="30"/>
    <param name="min_particles" value="500"/>
    <param name="max_particles" value="2000"/>
    <param name="kld_err" value="0.02"/>
    <param name="kld_z" value="0.99"/>
    <param name="update_min_d" value="0.05"/>
    <param name="update_min_a" value="0.1"/>
    <param name="odom_alpha1" value="0.1"/>
    <param name="odom_alpha2" value="0.1"/>
    <param name="odom_alpha3" value="0.1"/>
    <param name="odom_alpha4" value="0.1"/>
    <param name="odom_alpha5" value="0.1"/>
    <param name="gui_publish_rate" value="10.0"/>
    <remap from="scan" to="/scan"/>
  </node>

  
  <node pkg="field_robot_cam" type="mode_manager.py" name="mode_manager" output="screen"> </node>
</launch>
