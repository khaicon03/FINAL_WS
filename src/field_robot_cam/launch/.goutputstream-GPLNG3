    <param name="capture_height" value="720" />
    <param name="display_width" value="640" />
    <param name="display_height" value="480" />
    <param name="framerate" value="30" />
    <param name="flip_method" value="0" />
  </node>

  <node pkg="field_robot_cam" type="cam.py" name="cam" output="screen">
    <param name="image_topic" value="/camera/image_raw" />
    <param name="show_debug" value="true" />        

    <param name="forward_speed" value="0.25"/>
    <param name="left_target_ratio"  value="0.30"/>
    <param name="right_target_ratio" value="0.70"/>
    <param name="center_ratio"       value="0.50"/>

